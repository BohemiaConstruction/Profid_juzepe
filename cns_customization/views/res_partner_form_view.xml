<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_res_partner_form_inherit_cns" model="ir.ui.view">
        <field name="name">res.partner.form.inherit.cns</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="cns_name_striped" readonly="1"/>

        <field name="arch" type="xml">
            <!-- Vložení nové stránky před záložku "Contacts and Addresses" -->
            <xpath expr="//page[@autofocus]" position="attributes">
                <attribute name="autofocus">False</attribute>
            </xpath>
            <xpath expr="//page[1]" position="before">
                <page string="ČNS" name="cns_page" autofocus="autofocus">
                    <group name="cns_main_group">
                        <group name="cns_group_left">
                            <field name="cns_pobocka"/>
                            <field name="cns_datum_narozeni"/>
                            <field name="cns_clenem_od_roku"/>
                            <field name="cns_cestny_clen"/>
                            <field name="cns_zaslat_nc_neclenovi"/>
                            <field name="cns_je_ukonceno_clenstvi" string="Ukončené členství"/>
                        </group>
                        <group name="cns_group_right">
                            <field name="contact_address_complete"/>
                            <field name="contact_address"/>
                            <field name="contact_address_inline"/>
                        </group>
                        <!-- Nová skupina pro roční členství -->
                        <group string="Členství v letech" name="membership_years_group">
                            <field name="clenem_v_2019"/>
                            <field name="clenem_v_2020"/>
                            <field name="clenem_v_2021"/>
                            <field name="clenem_v_2022"/>
                            <field name="clenem_v_2023"/>
                            <field name="clenem_v_2024"/>
                            <field name="clenem_v_2025"/>
                            <field name="clenem_v_2026"/>
                            <field name="clenem_v_2027"/>
                            <field name="clenem_v_2028"/>
                            <field name="clenem_v_2029"/>
                            <field name="clenem_v_2030"/>
                            <field name="clenem_v_2031"/>
                            <field name="clenem_v_2032"/>
                        </group>
                        <group string="Dodací adresa">
                            <field name="delivery_street" optional="show" readonly="1"/>
                            <field name="delivery_street2" optional="show" readonly="1"/>
                            <field name="delivery_city" optional="show" readonly="1"/>
                            <field name="delivery_zip" optional="show" readonly="1"/>
                            <field name="delivery_state_id" optional="show" readonly="1"/>
                            <field name="delivery_country_id" optional="show" readonly="1"/>
                        </group>
                    </group>
                </page>
            </xpath>
            <!-- Vložení pole 'cns_cislo_clena_text' do samostatného div před pole 'is_company' -->
            <xpath expr="//h1" position="after">
                <field name="cns_cislo_clena_text"/>
            </xpath>
        </field>
    </record>
    <record id="cns_res_partner_view_tree" model="ir.ui.view">
        <field name="name">res.partner.tree.inherit</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='vat']" position="after">
                <field name="delivery_street" optional="show" readonly="1"/>
                <field name="delivery_street2" optional="show" readonly="1"/>
                <field name="delivery_city" optional="show" readonly="1"/>
                <field name="delivery_zip" optional="show" readonly="1"/>
                <field name="delivery_state_id" optional="show" readonly="1"/>
                <field name="delivery_country_id" optional="show" readonly="1"/>
            </xpath>
        </field>
    </record>
</odoo>
