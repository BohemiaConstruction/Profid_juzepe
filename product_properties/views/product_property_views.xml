<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_product_template_form_inherit" model="ir.ui.view">
        <field name="name">product.template.form.inherit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <notebook position="inside">
                <page string="Properties">
                    <group>
                        <field name="property_id"/>
                        <field name="property_id.category_id"/>
                        <field name="property_id.part_number"/>
                        <field name="property_id.value"/>
                        <field name="property_id.unit"/>
                        <field name="property_id.voltage_rating_vdc"/>
                        <field name="property_id.dielectric"/>
                        <field name="property_id.tolerance"/>
                        <field name="property_id.footprint"/>
                        <field name="property_id.note"/>
                    </group>
                </page>
            </notebook>
        </field>
    </record>
</odoo>