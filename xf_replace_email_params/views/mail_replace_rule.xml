<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Tree View -->
        <record id="mail_replace_rule_tree" model="ir.ui.view">
            <field name="name">mail.replace.rule.tree</field>
            <field name="model">mail.replace.rule</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="sequence" widget="handle"/>
                    <field name="name"/>
                    <field name="model_id"/>
                    <field name="company_id" groups="base.group_multi_company"/>
                    <field name="email_from"/>
                    <field name="reply_to"/>
                    <field name="domain_filter"/>
                    <field name="only_for_internal_users"/>
                </tree>
            </field>
        </record>

        <!-- Form View -->
        <record id="mail_replace_rule_form" model="ir.ui.view">
            <field name="name">mail.replace.rule.form</field>
            <field name="model">mail.replace.rule</field>
            <field name="arch" type="xml">
                <form string="Mail Replace Rule">
                    <sheet>
                        <group>
                            <field name="sequence"/>
                            <field name="name"/>
                            <field name="model_id"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                            <field name="domain_filter"/>
                            <field name="only_for_internal_users"/>
                        </group>
                        <group>
                            <field name="email_from"/>
                            <field name="reply_to"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Action -->
        <record id="mail_replace_rule_action" model="ir.actions.act_window">
            <field name="name">Mail Replace Rules</field>
            <field name="res_model">mail.replace.rule</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- Menu Item -->
        <menuitem id="menu_mail_replace_rule" 
                  name="Mail Replace Rules" 
                  parent="mail.menu_mail_configuration" 
                  action="mail_replace_rule_action"/>
    </data>
</odoo>
